{
  "manifest_version": 3,
  "name": "GitHub JIRA Ticket Linker",
  "description": "",
  "version": "1.3.0",
  "content_scripts": [{
    "matches": ["*://*/*"],
    "include_globs": ["*github*", "*ghe*"],
    "js":      ["js/storage.js", "js/jquery-3.7.1.min.js", "js/content.js"]
    }],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
     "default_icon": "image/icon.png",
     "default_popup": "popup.html",
     "default_title": "GitHub JIRA Ticket Linker"
  },
  "icons": {
     "128": "image/icon.png"
  }
}
